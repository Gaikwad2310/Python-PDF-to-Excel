quarter_options = ["Q1", "Q2", "Q3", "Q4"]

    # Dictionary to hold selected quarters for each model
    model_quarters = {}

    if selected_model_ids:
        st.markdown("### Select Quarter(s) for Each Model ID")
        for model_id in selected_model_ids:
            quarters = st.multiselect(
                f"ðŸ“Œ Quarters for Model ID {model_id}",
                options=quarter_options,
                key=f"{model_id}_quarters"
            )
            if quarters:
                model_quarters[model_id] = quarters
