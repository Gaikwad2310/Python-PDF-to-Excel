def get_user_inputs():
    st.sidebar.title("ğŸ§­ Input Panel")

    model_id_list = ["12345", "23412", "23456", "34256", "65474"]
    quarter_options = ["Q1", "Q2", "Q3", "Q4"]
    year_options = [str(y) for y in range(2015, 2031)]

    master_path = st.sidebar.text_input("ğŸ“ Master Folder Path", placeholder="E.g., C:/Users/YourName/Models")

    selected_model_ids = st.sidebar.multiselect("ğŸ†” Choose Model IDs", options=model_id_list)

    model_quarters_years = {}
    if selected_model_ids:
        for model_id in selected_model_ids:
            with st.sidebar.expander(f"ğŸ“Œ Quarters & Years for {model_id}", expanded=False):
                quarters = st.multiselect(f"Quarters", quarter_options, key=f"{model_id}_q")
                years = st.multiselect(f"Years", year_options, key=f"{model_id}_y")
                if quarters and years:
                    model_quarters_years[model_id] = {"quarters": quarters, "years": years}

    return {
        "master_path": master_path,
        "model_quarters_years": model_quarters_years
    }

def main():
    st.set_page_config(page_title="ğŸ“‚ Model Folder Viewer", layout="wide")
    st.title("ğŸ“‚ Model Folder Search & Data Viewer")
    st.markdown("Use the sidebar to select model IDs, quarters, and years. Then hit **Search and Load** to view data.")

    inputs = get_user_inputs()
    master_path = inputs["master_path"]
    model_quarters_years = inputs["model_quarters_years"]

    st.markdown("---")
    st.subheader("ğŸ“‹ Selected Inputs Summary")

    if not master_path:
        st.info("â„¹ï¸ Enter the master folder path in the sidebar.")
    else:
        st.markdown(f"âœ… **Master Path:** `{master_path}`")

    if not model_quarters_years:
        st.warning("âš ï¸ No model data selected yet.")
    else:
        for mid, val in model_quarters_years.items():
            st.markdown(f"- **Model `{mid}`** â†’ Quarters: `{', '.join(val['quarters'])}` | Years: `{', '.join(val['years'])}`")

    st.markdown("---")

    if st.button("ğŸš€ Search and Load Data"):
        if not master_path or not model_quarters_years:
            st.error("ğŸš« Please complete all input fields before proceeding.")
            return

        all_folders = []
        with st.spinner("ğŸ” Looking for matching folders..."):
            for model_id, selections in model_quarters_years.items():
                for quarter in selections["quarters"]:
                    for year in selections["years"]:
                        folders = find_matching_folder(master_path, model_id, quarter, year)
                        all_folders.extend(folders)

        if not all_folders:
            st.error("âŒ No folders found with the selected criteria.")
            return

        st.success(f"âœ… Found {len(all_folders)} folder(s).")

        for idx, folder in enumerate(all_folders):
            with st.expander(f"ğŸ“ Folder {idx + 1}: {folder}"):
                df = load_data_from_folder(folder)
                if df.empty:
                    st.warning("âš ï¸ No CSV files or empty data found.")
                else:
                    st.dataframe(df, use_container_width=True)

                    # Download option
                    csv = df.to_csv(index=False).encode("utf-8")
                    st.download_button(
                        label="â¬‡ï¸ Download CSV",
                        data=csv,
                        file_name=f"data_{idx+1}.csv",
                        mime="text/csv"
                    )
